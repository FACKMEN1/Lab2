<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ExcelData" SelectionChanged="DataGrid_SelectionChanged" Margin="0,0,0,94" AutoGenerateColumns="True">
           

        </DataGrid>
        <Button x:Name="Add_btn" Content="Добавить запись" HorizontalAlignment="Left" Margin="37,0,0,21" VerticalAlignment="Bottom" Height="38" Width="128" Click="Add_btn_Click"/>
        <Button x:Name="Delete_btn" Content="Удалить запись" HorizontalAlignment="Left" Margin="208,0,0,21" VerticalAlignment="Bottom" Height="38" Width="128"/>
        <TextBox x:Name="RecordCount" HorizontalAlignment="Left" Margin="510,0,0,31" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" Width="120"/>

    </Grid>
</Window>
